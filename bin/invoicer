#!/usr/bin/env ruby
$: << File.join(__dir__, '..', 'lib')

require 'thor'
require 'invoicer'

class InvoicerCLI < Thor

  desc "generate", "Generate an invoice or a cost estimation PDF"
  long_desc <<-LONGDESC
    Will generate an invoice PDF.

    > $ ./bin/invoicer generate
  LONGDESC
  def generate
    pdf_path = File.join(__dir__, '..', 'invoice.pdf')
    invoicer = Invoicer::Generator.new(pdf_path)

    invoicer.process
  end
end

InvoicerCLI.start(ARGV)
